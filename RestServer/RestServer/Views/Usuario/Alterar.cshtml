@model RestServer.Models.Usuario
@{
    ViewBag.Title = "Alterar Usuario";
}

<nav class="navbar navbar-inverse">
    <div class="navbar-header">
        <ul class="nav navbar-nav">
            <li class="navbar-brand">Alterar Usuario</li>
        </ul>
    </div>
</nav>


<body>
    <div class="container">
        <form method="post">
            <p>@ViewBag.MensagemErro</p>
            <label for="Nome">Nome</label><br />
            <input type="text" class="form-control" name="Nome" id="Nome" value="@Model.Nome" required/><br />
            <label for="Email">Email</label><br />
            <input type="text" class="form-control" name="Email" id="Email" value="@Model.Email" required/>
            <br />
            <br />
            <input type="submit" class="btn btn-success" value="Salvar" />
            @Html.ActionLink("Cancelar", "Index", "Consultas", null, new { @class = "btn btn-danger" })
        </form>
    </div>
</body>
