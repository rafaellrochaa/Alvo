@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Index";
}

<body>
    <div class="container">

        <!--Debug-->
        <!--<img src="../../Content/imgs/alvo-04.png" class="img-responsive center-block" alt="Alvo logo" /><br />-->

        <!--Publicação-->
        <img src="http://www.agilus.com.br/alvo/imgs/alvo-04.png" class="img-responsive center-block" alt="Alvo logo"/><br /><br />
        <br />
        <br />
        
        @{
            if (ViewBag.UsuarioCriado != null)
            {
                <p class="text-danger text-center"> @ViewBag.UsuarioCriado </p>
            }
        }

         <form method="post" role="form" class="form-horizontal">
            <input type="hidden" name="returnUrl" id="returnUrl" value="@Request["ReturnUrl"]"/>
             
            <div class="form-group">
                <div class="col-md-5">
                <!--Espaçamento em branco para centraliar o campo de usuário-->
                </div>

                <div class="col-md-2">
                    <input type="text" id="usuario" name="usuario" class="form-control" placeholder="Usuário" required>
                </div>

                    <div class="col-md-5">
                    <!--Espaçamento em branco para centraliar o campo de usuário-->
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-5">
                    <!--Espaçamento em branco para centraliar o campo de senha-->
                </div>

                <div class="col-md-2">
                    <input type="password" id="senha" name="senha" class="form-control" placeholder="senha" required>
                </div>

                 <div class="col-md-5">
                    <!--Espaçamento em branco para centraliar o campo de senha-->
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-5">
                    <!--Espaçamento em branco para centraliar o botão logar-->
                </div>

                <div class="col-md-2">
                    <button class="btn btn-lg btn-primary btn-block btn-danger" type="submit">Logar</button>
                </div>

                <div class="col-md-5">
                    <!--Espaçamento em branco para centraliar o botão logar-->
                </div>
            </div>
                <p class="text-center"><a>@Html.ActionLink("Cadastrar novo usuário", String.Empty, new { controller = "Usuario" })</a></p>
        </form>
    </div>
</body>

