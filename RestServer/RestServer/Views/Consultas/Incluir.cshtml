@{
    ViewBag.Title = "Incluir";
}

<nav class="navbar navbar-inverse">
    <ul class="nav navbar-nav">
        <li class="nav navbar-brand">Incluir Nova Consulta</li>
    </ul>
</nav>

<div class="container">
    <div class="alert alert-warning" role="alert">Selecione o arquivo com as matrículas para realizar a consulta. O arquivo deve conter no mínimo 2 matrículas e no máximo 100 mil, caso contrário a consulta não será realizada.</div>
    <br />
    <div class="container">
        <form method="post" enctype="multipart/form-data">
            <label>Descrição consulta:</label>
            <input type="text" id="Descricao" name="Descricao" size="33" maxlength="100" /><br />
            <br />
            <input type="file" id="arquivo" name="arquivo" accept=".csv" />
            <br />
            
            <div class="text-danger text-left" id="MensagemAguardar"> 
                <script type="text/javascript">
                    function MensagemUsuario(){
                                                document.getElementById("MensagemAguardar").innerHTML = "Aguarde o envio do arquivo. Ao finalizar o envio a página será redirecionada.";
                                               }
                </script>
            </div>

            <br />
            <input type="submit" class="btn btn-success" value="Enviar" onclick="MensagemUsuario()" />
            @Html.ActionLink("Cancelar", "Index", "Consultas", null, new { @class = "btn btn-danger" })
        </form>
        </div>
    </div>
